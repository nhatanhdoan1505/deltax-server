{
  "compilerOptions": {
     "module": "commonjs",
     "moduleResolution": "node",
     "pretty": true,
     "target": "es6",
     "outDir": "./dist",
     "baseUrl": "src",
     "esModuleInterop": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "allowSyntheticDefaultImports": true,
     "noImplicitAny": false,
     "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
     "src/**/*.ts"
  ],
  "exclude": [
     "node_modules",
  ]
}